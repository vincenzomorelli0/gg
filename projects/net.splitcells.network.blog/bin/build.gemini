set -e
pip3 install md2gemini
projectPath=$(pwd)
cd $projectPath/src/main/hugo/content/blog
	mkdir -p $projectPath/target/site.gemini
	cp $projectPath/src/main/hugo/content/blog/index.gmi $projectPath/target/site.gemini/index.gmi
	ls | xargs -i python3 -m md2gemini --dir $projectPath/target/site.gemini --frontmatter --write {}
cd $projectPath/target/source.dependencies
	ls | xargs -i python3 -m md2gemini --dir $projectPath/target/site.gemini --frontmatter --write {}
